# Application Environment
APP_ENV=development  # development, staging, production

# OpenRouter Configuration
OPENROUTER_API_KEY=sk-or-v1-your-key-here
# Get your key at: https://openrouter.ai/keys

# Voyage AI Configuration
VOYAGEAI_API_KEY=pa-your-key-here
# Get your key at: https://dash.voyageai.com/

# Qdrant Configuration (Local Development)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Optional: Override config values via environment variables
# APP_LLM_MODEL=anthropic/claude-3-sonnet
# APP_EMBEDDINGS_MODEL=voyage-2
# APP_VECTOR_DB_COLLECTION_NAME=documents

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Development Settings
DEBUG=true
ENABLE_PROFILING=false

# Security
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=.txt,.pdf,.docx,.doc,.md,.rtf,.odt

# Performance
EMBEDDING_BATCH_SIZE=128
CHUNKING_MAX_SIZE=500
CHUNKING_MIN_SIZE=100

# Monitoring (Optional)
ENABLE_METRICS=false
PROMETHEUS_PORT=9090

# Feature Flags (Optional)
ENABLE_GUARDRAILS=true
ENABLE_CACHING=false
ENABLE_VIRUS_SCAN=false
